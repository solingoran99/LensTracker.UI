@inject IJSRuntime JS

<nav class="top-nav">
    <img src="images/eye.png" class="nav-icon" />

    <div class="nav-date">@CurrentDate</div>

    <img src="images/calendar.png" class="nav-icon" />
</nav>

@code {
    string CurrentDate = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var result = await JS.InvokeAsync<string>("getFormattedDate");
            CurrentDate = result;
        }
        catch
        {
            // fallback to .NET date
            var now = DateTime.Now;
            CurrentDate = now.Day + " " + now.ToString("MMMM");
        }
    }
}
