<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />

    <link href="bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="app.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600&display=swap" rel="stylesheet">


    <HeadOutlet @rendermode="InteractiveServer" />
</head>

<body>
    <Routes @rendermode="InteractiveServer" />

    <script>
        window.getScrollTop = (element) => {
            try {
                if (!element || element.scrollTop == null) return 0;
                return Number(element.scrollTop) || 0;
            } catch {
                return 0;
            }
        };

        window.setScrollTop = (element, pos) => {
            try {
                if (element) {
                    element.scrollTop = pos;
                }
            } catch { }
        };

        window.scrollToDay = (element, pos) => {
            try {
                if (element) {
                    element.scrollTo({ top: pos, behavior: "smooth" });
                }
            } catch { }
        };

        window.getClientDateString = () => {
            try {
                const now = new Date();
                const sweden = new Date(now.toLocaleString("en-US", { timeZone: "Europe/Stockholm" }));
                return sweden.toISOString();
            } catch {
                return new Date().toISOString();
            }
        };

    </script>

    <script src="_framework/blazor.web.js"></script>
</body>
</html>
